[user]
    email = esbensonne@gmail.com
    name = Esben Sonne

[core]
    editor = vim

[color]
    branch = always
    diff = always
    grep = always
    interactive = always
    pager = true
    showbranch = always
    status = always
    ui = always

[apply]
    whitespace = fix

[merge]
    # Include summaries of merged commits in newly created merge commit messages
    log = true
    tool = sublime

[mergetool "sublime"]
    cmd = subl -w $MERGED
    trustExitCode = false

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
    remote = origin
    merge = refs/heads/master

[push]
    default = tracking

[fetch]
    recurseSubmodules = true

[log]
    decorate = short

[pretty]
    custom = %C(yellow)%h%Creset -%C(green)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset

# URL shorthands
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"

# Include ~/.git_aliases
[include]
    path = ~/.git_aliases
