[user]
    email = esbensonne@gmail.com
    name = Esben Sonne

[core]
    editor = vim

[color]
    branch = always
    diff = always
    grep = always
    interactive = always
    pager = true
    showbranch = always
    status = always
    ui = always

[apply]
    whitespace = fix

[merge]
    # Include summaries of merged commits in newly created merge commit messages
    log = true
    tool = sublime

[mergetool "sublime"]
    cmd = subl -w $MERGED
    trustExitCode = false

[push]
    default = tracking

[fetch]
    recurseSubmodules = true

[log]
    decorate = short

[pretty]
    custom = %C(yellow)%h%Creset -%C(green)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset

# Include ~/.git_aliases
[include]
    path = ~/.git_aliases
