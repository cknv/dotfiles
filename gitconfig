[user]
    email = esbensonne@gmail.com
    name = Esben Sonne

[core]
    editor = vim
    whitespace = tab-in-indent,trailing-space,cr-at-eol

[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green
    remote = cyan
    upstream = blue
[color "diff"]
    context = white
    meta = yellow
    commit = green
    frag = magenta
    old = red
    new = green
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = red

[apply]
    whitespace = error

[merge]
    # Include summaries of merged commits in newly created merge commit messages
    log = true
    tool = sublime
    defaultToUpstream = true

[mergetool "sublime"]
    cmd = subl3 -w $MERGED
    trustExitCode = false

[push]
    default = tracking

[fetch]
    recurseSubmodules = true

[log]
    decorate = short

[pretty]
    custom = %C(yellow)%h%Creset -%C(green)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset

# Include ~/.git_aliases
[include]
    path = ~/.git_aliases

[diff]
    algorithm = patience
