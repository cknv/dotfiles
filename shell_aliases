# ls
alias ls='ls --color=always -h -F'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -la'

# cd
alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'
alias -- -='cd -'

# shell utils
alias short='path_len 1'
alias long='path_len 0'

# easy and consise history
alias hist='history 10'

# smarter tailing
alias tail='tail -f'
