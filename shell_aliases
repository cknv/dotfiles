alias sudo='sudo '

# ls
alias ls='ls --color=always -h -F'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -la'

# cd
alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'
alias -- -='cd -'

# just makes parents by default too
alias mkdir='mkdir --parents'

# ergonomic grep
alias grep='grep --color --ignore-case'

# it confuses me that nautilus is also called files
alias files='nautilus . > /dev/null 2> /dev/null &'

# docker-compose is getting annoying to type
alias dc='docker-compose'

# pre-commit too
alias pc='pre-commit'

# shell utils
alias short='path_len 1'
alias long='path_len 0'

# easy and consise history
alias hist='history -iD'

# smarter tailing
alias tail='tail -f'

# lazy git
alias g='git'

# json prettifier
alias json='python -m json.tool'

alias rmorig='rm **/*.orig'

alias docker-clean='docker stop $(docker ps --quiet) && docker rm $(docker ps --all --quiet) && docker rmi $(docker images --quiet)'

alias mirrorlist='reflector --verbose -l 10 --sort rate --sort score --sort age --protocol rsync --protocol http --protocol https --save /etc/pacman.d/mirrorlist'

# encode and decode
alias b64='base64'
