{
  "always_show_minimap_viewport": true,
  "auto_complete_triggers":
  [
    {
      "characters": "<",
      "selector": "text.html"
    },
    {
      "characters": ".",
      "selector": "source.python"
    }
  ],
  "bold_folder_labels": true,
  "caret_style": "smooth",
  "color_scheme": "Packages/User/tamriel.sublime-color-scheme",
  "draw_centered": true,
  "folder_exclude_patterns":
  [
    ".svn",
    ".git",
    ".hg",
    "CVS",
    ".mypy_cache",
    ".pytest_cache",
    "*.egg-info",
    ".cache",
    "node_modules",
    ".log",
        "build",
        ".tox",
        "__pycache__",
        "dist"
  ],
  "font_face": "Fira Code",
  "font_size": 11,
  "highlight_line": true,
  "highlight_modified_tabs": true,
  "ignored_packages":
  [
    "Vintage"
  ],
  "overlay_scroll_bars": true,
  "rulers":
  [
    79
  ],
  "shift_tab_unindent": true,
  "theme": "Adaptive.sublime-theme",
  "wrap_width": 80
}
